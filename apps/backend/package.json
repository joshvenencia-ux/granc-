{
    "name": "backend",
    "version": "0.0.1",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "prestart:prod": "prisma migrate deploy",
        "start:prod": "node --enable-source-maps dist/main.js",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest -c jest.config.ts",
        "test:watch": "jest -c jest.config.ts --watch",
        "test:cov": "jest -c jest.config.ts --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "db:format": "prisma format",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "postinstall": "prisma generate",
        "db:studio": "prisma studio",
        "db:seed": "prisma db seed",
        "watch:firestore": "ts-node src/workers/firestore-watch.ts",
        "auth:delete-all": "ts-node scripts/delete-all-users.ts"
    },
    "prisma": {
        "schema": "prisma/schema.prisma",
        "seed": "ts-node prisma/seeds.ts"
    },
    "dependencies": {
        "@nestjs/common": "11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "11.1.6",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/platform-express": "11.1.6",
        "@nestjs/platform-socket.io": "11.1.6",
        "@nestjs/websockets": "11.1.6",
        "@prisma/client": "6.16.1",
        "admin": "^1.4.1",
        "bcryptjs": "^3.0.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "^1.8.1",
        "dotenv": "^17.2.2",
        "firebase": "^12.2.1",
        "firebase-admin": "^13.5.0",
        "helmet": "^8.1.0",
        "pg": "8.11.3",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.1",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/compression": "^1.8.1",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.18.6",
        "@types/pg": "^8.15.5",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "prisma": "6.16.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.20.0"
    },
    "engines": {
        "node": "22.x"
    }
}
